<script>
    function AlertSelectedIds(rowIds)
    {
        var result = $(this).closest(".griddly").griddly("getSelected", rowIds);

        var str = "{\n";
        for (var k in result)
            str += " " + k + " : [ " + result[k].toString() + " ]\n";
        str += "}";
        
        alert(str);
    }
</script>