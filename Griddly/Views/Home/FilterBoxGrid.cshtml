
@{
    ViewBag.Title = "TestGrid";
}

@Html.Griddly(new GriddlySettings<TestGridItem>()
    {
        PageSize = 5
    }
    .Column(x => x.FirstName, "First Name")
        .Column(x => x.LastName, "Last Name", defaultSort: SortDirection.Ascending, filter: x => x.FilterBox(FilterDataType.String, "ba"))
                .Column(x => x.Company, "Company", filter: x => x.FilterBox(FilterDataType.Decimal, 53.5))
            .Column(x => x.Address, "Address", filter: x => x.FilterBox(FilterDataType.Currency, 72.66))
            .Column(x => x.City, "City", filter: x => x.FilterBox(FilterDataType.Date, DateTime.Now))
        .Column(x => x.PostalCode, "Zip", filter: x => x.FilterBox(FilterDataType.Integer, 12345))
)